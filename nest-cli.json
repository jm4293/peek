{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": "apps/api",
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.json"
      }
    },
    "api-admin": {
      "type": "application",
      "root": "apps/api-admin",
      "entryFile": "main",
      "sourceRoot": "apps/api-admin/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-admin/tsconfig.json"
      }
    },
    "database": {
      "type": "library",
      "root": "packages/database",
      "entryFile": "index",
      "sourceRoot": "packages/database/src",
      "compilerOptions": {
        "tsConfigPath": "packages/database/tsconfig.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "packages/shared",
      "entryFile": "index",
      "sourceRoot": "packages/shared/src",
      "compilerOptions": {
        "tsConfigPath": "packages/shared/tsconfig.json"
      }
    }
  }
}
