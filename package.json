{
  "name": "peek",
  "version": "1.0.0",
  "private": true,
  "author": "jm4293",
  "scripts": {
    "format": "prettier --write \"apps/**/*.ts\" \"packages/**/*.ts\"",
    "dev": "concurrently --names \"API,ADMIN\" -c \"blue,green\" \"pnpm dev:api\" \"pnpm dev:api-admin\"",
    "predev:api": "pnpm --filter @packages/shared build && pnpm --filter @packages/database build && pnpm build:api",
    "dev:api": "nest start --watch api",
    "predev:api-admin": "pnpm --filter @packages/shared build && pnpm --filter @packages/database build && pnpm build:api-admin",
    "dev:api-admin": "nest start --watch api-admin",
    "dev:web": "pnpm --filter @apps/web dev",
    "dev:web-admin": "pnpm --filter @apps/web-admin dev",
    "prebuild": "pnpm --filter @packages/shared build && pnpm --filter @packages/database build",
    "build": "pnpm -r run build",
    "build:packages": "pnpm --filter @packages/shared build && pnpm --filter @packages/database build",
    "build:api": "nest build api && tsc-alias -p apps/api/tsconfig.json",
    "build:api-admin": "nest build api-admin",
    "build:web": "pnpm --filter @apps/web build",
    "build:web-admin": "pnpm --filter @apps/web-admin build",
    "start:prod": "node dist/apps/api/src/main",
    "lint": "pnpm -r run lint",
    "clean": "rm -rf dist",
    "clean:modules": "find . -name 'node_modules' -type d -prune -exec rm -rf {} +",
    "clean:all": "pnpm clean && pnpm clean:modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@nestjs/cli": "^11.0.10",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "packageManager": "pnpm@9.15.0",
  "lint-staged": {
    "*.{ts,tsx}": [
      "bash -c 'if grep -n \"console\\.log\" \"$@\" 2>/dev/null; then echo \"\\n❌ console.log 발견! 제거 후 커밋하세요.\"; exit 1; fi' _"
    ]
  }
}
