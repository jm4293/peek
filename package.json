{
  "name": "peek",
  "version": "1.0.0",
  "private": true,
  "author": "jm4293",
  "scripts": {
    "format": "prettier --write \"apps/**/*.ts\" \"packages/**/*.ts\"",
    "dev:api": "pnpm --filter @apps/api dev",
    "dev:api-admin": "pnpm --filter @apps/api-admin dev",
    "dev:web": "pnpm --filter @apps/web dev",
    "dev:web-admin": "pnpm --filter @apps/web-admin dev",
    "build:api": "pnpm --filter @apps/api build",
    "build:api-admin": "pnpm --filter @apps/api-admin build",
    "build:web": "pnpm --filter @apps/web build",
    "build:web-admin": "pnpm --filter @apps/web-admin build",
    "start:api": "pnpm --filter @apps/api start:prod",
    "start:api-admin": "pnpm --filter @apps/api-admin start:prod",
    "start:web": "pnpm --filter @apps/web start",
    "start:web-admin": "pnpm --filter @apps/web-admin start",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "lint": "pnpm -r run lint",
    "clean": "rm -rf dist",
    "clean:modules": "find . -name 'node_modules' -type d -prune -exec rm -rf {} +",
    "clean:all": "pnpm clean && pnpm clean:modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@nestjs/cli": "^11.0.10",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "pm2": "^5.4.3",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "packageManager": "pnpm@9.15.0",
  "lint-staged": {
    "*.{ts,tsx}": [
      "bash -c 'if grep -n \"console\\.log\" \"$@\" 2>/dev/null; then echo \"\\n❌ console.log 발견! 제거 후 커밋하세요.\"; exit 1; fi' _"
    ]
  }
}
