{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "paths": {
      // "@*": ["./*"],
      // "@app/web/board/*": ["./app/(main)/board/*"],
      // "@app/web/home/*": ["./app/(main)/home/*"],
      // "@app/web/stock/*": ["./app/(main)/stock/*"],
      // "@app/web/user/*": ["./app/(main)/user/*"],
      // "@app/web/auth/*": ["./app/(auth)/auth/*"],

      "@app/web/components": ["./components"],
      "@app/web/features": ["./features"],
      "@app/web/hooks": ["./hooks"],
      "@app/web/lib": ["./lib"],
      "@app/web/shared": ["./shared"],
      "@app/web/stores": ["./stores"],
      "@app/web/utils": ["./utils"],

      "@packages/database/entities": ["../../packages/database/src/entities"],
      "@packages/database/repositories": ["../../packages/database/src/repositories"],
      "@packages/shared/constant": ["../../packages/shared/src/constants"]
    }
  },
  "references": [{ "path": "../../packages/shared" }, { "path": "../../packages/database" }],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
